<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/stylesDetails.css" />
</head>

<body>
  <%- include('../partials/header') %>
  %>

  <main>
    <section class="producto-user">
      <article class="image-product">
        <div>
          <% 
          let imgs = ['/img/mk1.jpg', '/img/mk2.jpg', '/img/mk3.jpg', '/img/mk4.jpg', '/img/mk5.jpg'];
          %>

          <% for (let i = 0; i < imgs.length; i++) { %>
            <% //console.log(locals); %>
          <% if (product.id === i + 1) { %>
          <img src="<%= imgs[i] %>" class="img-cover" alt="Imagen <%= i + 1 %>" />
          <% } %>
          <% } %>

          <!-- <img src="/img/mk1.jpg" class="img-cover" /> -->
        </div>
        <div class="info-product">
          <div>
            <h2 class="title-name">
              <%= product.name %>
            </h2>
            <h2>$<%= product.price %>
              <div>
                <h2 class="subtitle">Detalles del juego</h2>
                <p>
                  <%= product.details.description %>
                </p>
              </div>
            </h2>
          </div>
          <div>
            <button class="buy-now">Comprar</button>
            <button class="gift-button">regalar</button>
          </div>
        </div>
        <!-- <article class="product-description">
            <div>

              <p>
                <%= product.details.description %>
              </p>
            </div>
          </article> -->
      </article>


      <div class="juegos">
        <section class="container-juegos">
          <h2 class="title">Descripción</h2>
