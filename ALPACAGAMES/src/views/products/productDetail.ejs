        </section>

        <section class=" product-detail">
          <article class="list-detail">
            <h2 class="title">Detalles del Producto</h2>
            <ul class="oval-list">
              <li type="none">
                <strong>Plataformas:</strong>
                <%= product.platforms.map(platform=> platform.name).join(', ')
                    %>
              </li>
              <li type="none">
                <strong>Género:</strong>
                <%= product.genres.map(genre=> genre.name) %>
              </li>
              <li type="none">
                <strong>Fecha de Lanzamiento:</strong>
                <%= product.release_date %>
              </li>
              <li type="none"><strong>Precio:</strong>
                <%= product.price %>
              </li>
              <li type="none">
                <strong>Tamaño de Descarga:</strong>
                <%= product.details.size %>
              </li>
              <li type="none"><strong>Requisitos del Sistema:</strong></li>
              <ul>
                <li type="none">
                  <strong>Sistema Operativo:</strong>
                  <%= product.details.requiments.os %>
                </li>
                <li type="none">
                  <strong>Almacenamiento Requerido:</strong>
                  <%= product.details.requiments.storage %>
                </li>
              </ul>
              <% if (!locals.userAreLogged){ %>
                
              <% }else if (locals.userAreLogged.id == 1){ %>
                  <strong class="options-admin"><li><a href="/products/<%= product.id %>/edit">Opciones de administrador</a></li></strong>
              <% } %>
            </ul>
          </article>
          <article class="lore-product"></article>
        </section>


    </section>
    </div>
